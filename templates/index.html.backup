{% extends "base.html" %}

{% block title %}Home - Plant Phenology Observation Data Visualization Platform{% endblock %}

{% block content %}
<div class="row mb-4">
    <div class="col-12">
        <div class="text-center py-5">
            <h1 class="display-4 mb-3">
                <i class="fas fa-seedling text-success"></i>
                Plant Phenology Observation Platform
            </h1>
            <p class="lead text-muted">
                Exploring climate change impacts on plant growth cycles based on 70 years of German Weather Service phenological data
            </p>
        </div>
    </div>
</div>

<!-- 数据概览卡片 -->
<div class="row mb-5">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="display-6 mb-3">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <h5 class="card-title">Total Observations</h5>
                <h2 class="mb-0" id="total-observations">
                    <div class="spinner-border spinner-border-sm" role="status"></div>
                </h2>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="display-6 mb-3">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h5 class="card-title">Observation Stations</h5>
                <h2 class="mb-0" id="total-stations">
                    <div class="spinner-border spinner-border-sm" role="status"></div>
                </h2>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="display-6 mb-3">
                    <i class="fas fa-leaf"></i>
                </div>
                <h5 class="card-title">Plant Species</h5>
                <h2 class="mb-0" id="total-species">
                    <div class="spinner-border spinner-border-sm" role="status"></div>
                </h2>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="display-6 mb-3">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h5 class="card-title">Time Span</h5>
                <h3 class="mb-0" id="year-range">
                    <div class="spinner-border spinner-border-sm" role="status"></div>
                </h3>
            </div>
        </div>
    </div>
</div>

<!-- 地图预览和最新数据 -->
<div class="row mb-5">
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-globe me-2"></i>
                    Station Distribution Preview
                </h5>
            </div>
            <div class="card-body p-0">
                <div id="preview-map" style="height: 400px;"></div>
            </div>
            <div class="card-footer text-center">
                <a href="/geography" class="btn btn-primary">
                    <i class="fas fa-expand-arrows-alt me-2"></i>
                    View Detailed Map
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-clock me-2"></i>
                    Latest Observation Activity
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Latest Year Observations:</strong>
                    <span class="badge bg-success" id="latest-observations">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </span>
                </div>
                <div class="mb-3">
                    <strong>Active Stations:</strong>
                    <span id="active-stations" class="text-primary">加载中...</span>
                </div>
                <div class="mb-3">
                    <strong>Phenological Phases:</strong>
                    <span id="total-phases" class="text-info">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </span>
                </div>
                <hr>
                <div class="text-center">
                    <h6 class="text-muted mb-3">Quick Navigation</h6>
                    <div class="d-grid gap-2">
                        <a href="/timeline" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-chart-line me-1"></i>
                            Trend Analysis
                        </a>
                        <a href="/species" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-search me-1"></i>
                            Species Explorer
                        </a>
                        <a href="/quality" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-shield-alt me-1"></i>
                            Quality Monitor
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 年度统计图表 -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-area me-2"></i>
                    Annual Observation Trends
                </h5>
            </div>
            <div class="card-body">
                <div class="loading" id="chart-loading">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">加载中...</span>
                    </div>
                    <p class="text-muted mt-2">Loading chart data...</p>
                </div>
                <canvas id="yearly-chart" style="display: none;"></canvas>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
$(document).ready(function() {
    // 加载概览数据
    loadOverviewData();
    // 初始化预览地图
    initPreviewMap();
    // 加载年度趋势图表
    loadYearlyTrend();
});

function loadOverviewData() {
    $.get('/api/overview')
        .done(function(data) {
            // 格式化数字显示
            $('#total-observations').html(data.total_observations.toLocaleString());
            $('#total-stations').html(data.total_stations);
            $('#total-species').html(data.total_species);
            $('#total-phases').html(data.total_phases);
            $('#year-range').html(data.year_range);
            $('#latest-observations').html(data.latest_year_observations.toLocaleString());
            $('#active-stations').html(data.total_stations + ' stations');
        })
        .fail(function() {
            $('.spinner-border').replaceWith('<span class="text-danger">Loading Failed</span>');
        });
}

function initPreviewMap() {
    // 创建地图实例（聚焦德国）
    const map = L.map('preview-map').setView([51.1657, 10.4515], 6);
    
    // 添加地图图层
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
    }).addTo(map);
    
    // 加载站点数据（仅显示部分站点以提高性能）
    $.get('/api/stations')
        .done(function(stations) {
            // 只显示前50个观测数量最多的站点
            const topStations = stations.slice(0, 50);
            
            topStations.forEach(function(station) {
                if (station.latitude && station.longitude) {
                    const marker = L.marker([
                        parseFloat(station.latitude), 
                        parseFloat(station.longitude)
                    ]).addTo(map);
                    
                    marker.bindPopup(`
                        <strong>${station.station_name}</strong><br>
                        Altitude: ${station.altitude}m<br>
                        Observations: ${station.observation_count.toLocaleString()}
                    `);
                }
            });
        });
}

function loadYearlyTrend() {
    // 这里暂时使用模拟数据，实际应从API获取
    setTimeout(function() {
        $('#chart-loading').hide();
        $('#yearly-chart').show();
        
        const ctx = document.getElementById('yearly-chart').getContext('2d');
        
        // 生成近20年的模拟趋势数据
        const years = [];
        const observations = [];
        for (let year = 2004; year <= 2023; year++) {
            years.push(year.toString());
            observations.push(Math.floor(800000 + Math.random() * 200000));
        }
        
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: years,
                datasets: [{
                    label: 'Annual Observations',
                    data: observations,
                    borderColor: '#2c5234',
                    backgroundColor: 'rgba(44, 82, 52, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString();
                            }
                        }
                    }
                },
                elements: {
                    point: {
                        radius: 4,
                        hoverRadius: 6
                    }
                }
            }
        });
    }, 1500);
}
</script>
{% endblock %}